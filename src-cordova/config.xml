<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jasmadigital.jasma3" version="3.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jasma Digital-Jam Sholat Masjid</name>
    <description>
        Jadwal sholat digital menggunakan display TV LED.
    </description>
    <author email="arifptm@gmail.com" href="https://www.jasmadigital.com">
        Jasma Digital
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="mdpi" height="60" platform="android" src="res/icon/jasma/icon_60.png" width="60" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
